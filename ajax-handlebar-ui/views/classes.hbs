<h1>Classes Table</h1>

<!---Button for Toggling Display of Add Form to user -->
<div class="container">
    <div class="row"></div>
    <div class="row">
        <div class="col-md-12 text-center">
            <button id="show-classes-btn" type="button" class="btn btn-default" onclick="displayForm()">Add Class</button>
        </div>
    </div>
</div>

<!--Add new row to Classes table -->
<div class="container">
    <form class="add-form" id="add-class-form">
        <fieldset class="form-group border p-3">
            <legend class="float-none w-auto">Add New Class</legend>
            <div class="row text-center">
                <div class="col-4">
                    {{!-- <label class="form-label" for="input-class-name">New Class: </label> --}}
                    <input type="text" class="form-control" name="input-class-name" id="input-class-name" placeholder="Enter Class" required>
                </div>
                <div class="col-5">
                    {{!-- <label class="form-label" for="input-class-description">Description: </label> --}}
                    <input type="text" class="form-control" name="input-class-description" id="input-class-description" placeholder="Enter Description" required>
                </div>
                    <div class="col-3">
                        <button type="submit" class="btn btn-primary" id="add-class-btn">Add Class</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>

<script src="./js/add_class.js"></script>

<!-- Show Classes table -->
<table id="classes-table">
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>
    
    <tbody>
        {{#each data}}
        <tr data-value={{this.ID}}>
            <td>{{this.ID}}</td>
            <td>{{this.Name}}</td>
            <td>{{this.Description}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>