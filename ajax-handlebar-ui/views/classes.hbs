<!-- Show Races table -->
<h1>Classes Table</h1>
<table id="classes-table">
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>
    
    <tbody>
        {{#each data}}
        <tr data-value={{this.class_id}}>
            <td>{{this.class_id}}</td>
            <td>{{this.Name}}</td>
            <td>{{this.Description}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>


{{!-- add new class row --}}
<form id="add-class-form">
    <fieldset>
        <legend>Add New Class</legend>
        <label for="input-class-name">New Class: </label>
        <input type="text" name="input-class-name" id="input-class-name" placeholder="Enter Class">

        <label for="input-class-description">Description: </label>
        <input type="text" name="input-class-description" id="input-class-description" placeholder="Enter Description">

        <input type="submit">
    </fieldset>
</form>

<script src="./js/add_class.js"></script>
