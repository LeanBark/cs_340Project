<!-- Show Skill Checks table -->
<h1>Skill Check Events</h1>

<div id="crit-fail" hidden>
    <iframe seamless src="https://giphy.com/embed/oOBTO2UcSoaBJewZT0" title="Critical Failure" width="480" height="480" frameBorder="0" class="giphy-embed"></iframe>
</div>
<div id="crit-success" hidden>
    <iframe seamless src="https://giphy.com/embed/8cGXy3fskyacePqILB" title="Critical Success" width="480" height="480" frameBorder="0" class="giphy-embed" ></iframe>
</div>
<table id="events-table">
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
            <th></th>
        </tr>
    </thead>
    
    <tbody>
        {{#each data}}
        <tr data-value={{this.ID}}>
            <td>{{this.ID}}</td>
            <td>{{this.Description}}</td>
            <td>{{[Roll Result]}}</td>            
            <td>{{this.Difficulty}}</td>
            <td>{{[Difficulty Value]}}</td>
            <!-- Disable skill check edit -->
            <td><button onclick="updateEvent({{this.ID}})"><img src="/img/edit-icon.svg" width="39" height="30"></button></td>
            <!-- Disable skill check delete -->
            <td><button onclick="deleteEvent({{this.ID}})"><img src="img/delete-icon.svg" width="39" height="30"></button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<script src="./js/update_event.js"></script>
<script src="./js/delete_event.js"></script>



<!-- Add row to Skill Check table -->
<h2>Add A New Skill Check Event</h2> 
<form id="add-event-form">
    <fieldset>
        <legend>Add Event</legend>
        <label for="input-description">Event Description: </label>
        <input type="text" name="input-description" id="input-description" placeholder="Enter Description">

        <label for="input-roll-value">Player Roll Value: </label>
        <input type="number" name="input-roll-value" id="input-roll-value" placeholder="Enter Roll Value">

        <select name="input-difficulty" id="input-difficulty">
            <option value="">Select Difficulty</option>
            {{#each difficulties}}
            <option value="{{this.difficulty_id}}">{{this.description}}: {{this.value}}</option>
            {{/each}}
        </select>

        <!-- Disable add skill check -->
        <input type="submit">
    </fieldset>
</form>

<script src="./js/add_event.js"></script>

<!-- Update row in Skill Check Details table -->
<form id="update-event-form" hidden>
    <fieldset>
        <legend>Edit Event</legend>
        <label for="input-description-update">Event Description: </label>
        <input class="extended" type="text" name="input-description-update" id="input-description-update" placeholder="Enter Description">
        
        <label for="input-roll-value-update">Player Roll Value: </label>
        <input class="numbered" type="number" name="input-roll-value-update" id="input-roll-value-update" placeholder="Enter Roll Value">

        <select name="input-difficulty-update" id="input-difficulty-update">
            {{#each difficulties}}
            <option value="{{this.difficulty_id}}">{{this.description}}: {{this.value}}</option>
            {{/each}}
        </select>
        
        <!-- Disable update event -->
        <input type="submit">
    </fieldset> 
</form>

