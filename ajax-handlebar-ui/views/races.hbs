<!-- Show Races table -->
<h1>Races Table</h1>
<table id="races-table">
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>
    
    <tbody>
        {{#each data}}
        <tr data-value={{this.ID}}>
            <td>{{this.ID}}</td>
            <td>{{this.Name}}</td>
            <td>{{this.Description}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<div class="container">
    <div class="row"></div>
    <div class="row">
        <div class="col-md-12 text-center">
            <button id="show-races-btn" type="button" class="btn btn-default" onclick="displayForm()">Add Race</button>
        </div>
    </div>
</div>

<!-- Add row to Races table -->
<div class="container">
    <form class="add-form" id="add-race-form">
        <fieldset class="form-group border p-3">
            <legend class="float-none w-auto">Add New Race</legend>
            <div class="row text-center">
                <div class="col-4">
                    {{!-- <label for="input-race-name">New Race: </label> --}}
                    <input class="form-control" type="text" name="input-race-name" id="input-race-name" placeholder="Enter Race" required>
                </div>
                <div class="col-5">
                    {{!-- <label for="input-race-description">Description: </label> --}}
                    <input class="form-control" type="text" name="input-race-description" id="input-race-description" placeholder="Enter Description" required>
                </div>
                <div class="col-3">
                    <button type="submit" class="btn btn-primary" id="add-race-btn">Add Race</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>

<script src="./js/add_race.js"></script>
