<!-- Show Item Types table -->
<h1>Item Types Table</h1>
<table id="item-types-table">
    <thead>
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>
    
    <tbody>
        {{#each data}}
        <tr data-value={{this.ID}}>
            <td>{{this.ID}}</td>
            <td>{{this.Name}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<!---Button for Toggling Display of Add Form to user -->
<div class="container">
    <div class="row"></div>
    <div class="row">
        <div class="col-md-12 text-center">
            <button id="show-item-types-btn" type="button" class="btn btn-default" onclick="displayForm()">Add Item Type</button>
        </div>
    </div>
</div>

<!-- Add row to Item Types table -->
<div class="container">
    <form id="add-item-type-form">
        <fieldset class="form-group border p-3">
            <legend class="float-none w-auto">Add New Item Type</legend>
            <div class="row">
                <div class="col-6">
                    <input type="text" class="form-control" name="input-type-name" id="input-type-name" placeholder="Enter Item Type" required>
                </div>
                <div class="col-6">
                    <button type="submit" class="btn btn-primary" id="add-item-type-btn">Add Item Type</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>

<script src="./js/add_item_type.js"></script>